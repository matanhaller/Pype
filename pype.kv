#:import rgba kivy.utils.rgba
#:import design design

<Label>:
	font_name: 'LatoRegular'

<Button>:
	font_name: 'LatoBold'
	background_normal: ''
	background_down: ''

<TextInput>:
	multiline: False
	hint_text_color: rgba(design.GRAY)
	background_normal: ''
	background_active: ''


<ScrollView>:
	size_hint_y: 0.8
	do_scroll_x: False

<GridLayout>:
	size_hint_y: None
	height: 0

<ToggleButton>:
	state: 'normal'

<ErrorLabel>:
	font_size: 24
	canvas.before:
		Color:
			rgba: rgba(design.get_color('light', 'red'))
		Rectangle:
			pos: self.pos
			size: self.size

<EntryScreen>:
	id: entry_screen
	BoxLayout:
		id: main_layout
		orientation: 'vertical'
		Label:
			text: 'Welcome to Pype'
			font_size: 48
			font_name: 'LatoBold'
		TextInput:
			id: username_input
			hint_text: 'Enter username'
			font_size: 36
			font_name: 'LatoLight'
			on_text_validate: root.on_join_btn_press()
		Button:
			id: join_btn
			text: 'Join'
			font_size: 36
			background_color: rgba(design.get_color('light', 'green'))
			on_press: root.on_join_btn_press()

<MainScreen>:
	id: main_screen
	BoxLayout:
		id: main_layout
		orientation: 'vertical'
		BoxLayout:
			size_hint_y: 0.9
			orientation: 'vertical'
			Label:
				size_hint_y: 0.2
				text: 'Welcome, ' + root.username
				font_size: 48
				font_name: 'LatoBold'
			BoxLayout:
				id: interface_layout
				orientation: 'horizontal'
				size_hint_y: 0.8
		BoxLayout:
			id: footer_layout
			size_hint_y: 0.1
			orientation: 'horizontal'

<UserSlot>:
	size_hint_y: None
	height: 50
	orientation: 'horizontal'
	spacing: 20
	canvas.before:
		Color:
			rgba: rgba(design.get_color('light', self.color))
		Rectangle:
			pos: self.pos
			size: self.size
	BoxLayout:
		orientation: 'vertical'
		size_hint_x: 0.8
		Label:
			id: user_lbl
			size_hint_y: 0.6
			text: root.username
			font_size: 24
		Label:
			id: status_lbl
			size_hint_y: 0.4
			text: root.status
			font_size: 18
			font_name: 'LatoLight'
	Button:
		size_hint_x: 0.2
		background_color: rgba(design.get_color('dark', root.color))
		text: 'Call'
		font_size: 24
		on_press: root.on_call_btn_press()

<CallSlot>:
	canvas.before:
		Color:
			rgba: rgba(design.get_color('light', root.color))
		Rectangle:
			pos: self.pos
			size: self.size
	size_hint_y: None
	height: 50
	orientation: 'horizontal'
	Label:
		id: user_lbl
		size_hint_x: 0.8
		font_size: 24
	Button:
		size_hint_x: 0.2
		background_color: rgba(design.get_color('dark', root.color))
		text: 'Join'
		font_size: 24
		on_press: root.on_join_btn_press()

<UserLayout>:
	orientation: 'vertical'
	size_hint_x: 0.3
	Label:
		id: user_num_lbl
		size_hint_y: 0.2
		font_size: 24
		font_name: 'LatoBold'
	ScrollView:
		GridLayout:
			id: user_slot_layout
			cols: 1

<CallLayout>:
	orientation: 'vertical'
	size_hint_x: 0.7
	Label:
		id: call_num_lbl
		size_hint_y: 0.2
		font_size: 24
		font_name: 'LatoBold'
	ScrollView:
		GridLayout:
			id: call_slot_layout
			cols: 1

<PendingCallFooter>:
	orientation: 'horizontal'
	Label:
		text: 'Calling {}...'.format(root.username)
		font_size: 24
	Label:
		id: counter
		text: '00:00'
		font_size: 24

<CallFooter>
	orientation: 'horizontal'
	Label:
		size_hint_x: 0.6
		text: '{} is calling'.format(root.username)
		font_size: 24
	Button:
		size_hint_x: 0.2
		background_color: rgba(design.get_color('dark', 'green'))
		font_size: 24
		text: 'Accept'
		on_press: root.on_call_btn_press('accept')
	Button:
		size_hint_x: 0.2
		background_color: rgba(design.get_color('dark', 'red'))
		font_size: 24
		text: 'Reject'
		on_press: root.on_call_btn_press('reject')

<SessionLayout>:
	size_hint_x: 0.7
	orientation: 'horizontal'

<VideoLayout>:
	GridLayout:
		size_hint: 1, 1
		pos_hint: {'x': 0, 'y': 0}
		id: video_display_layout
		cols: 2
	SelfVideoDisplay:
		id: self_cap
		
<SelfVideoDisplay>:
	resolution: 640, 480
	size_hint: 0.25, 0.25
	pos_hint: {'x': 0.75, 'y': 0}		

<PeerVideoDisplay>:
	Image:
		id: frame
		source: 'images/blank.png'
		size_hint: 1, 1
		pos_hint: {'x': 0, 'y': 0}
		keep_ratio: False
		allow_stretch: True
	Label:
		text: root.user
		font_name: 'LatoBold'
		size_hint_y: 0.1
		pos_hint: {'x': 0, 'y': 0}

<StatisticsLabel>:
	size_hint: 0.25, 0.25
	pos_hint: {'x': 0, 'y': 0}
	color: 1, 1, 1, 1
	font_name: 'LatoBold'
    canvas:
        Color:
            rgba: 0, 0, 0, 0
        Rectangle:
            pos: self.pos
            size: self.size

<ChatLayout>:
	size_hint_x: 0.3
	orientation: 'vertical'
	ScrollView:
		id: scroll_layout
		GridLayout:
			id: chat_msg_layout
			cols: 1
	BoxLayout:
		size_hint_y: 0.1
		orientation: 'horizontal'
		TextInput:
			id: chat_input
			size_hint_x: 0.8
			hint_text: 'Enter message'
			on_text_validate: root.on_send_btn_press()
		Button:
			size_hint_x: 0.2
			background_color: rgba(design.get_color('dark', 'turqoise'))
			text: 'Send'
			on_press: root.on_send_btn_press()

<MessageLabel>:
	size_hint_y: None
	font_size: 18
	text_size: self.size
	halign: 'left'
	text: root.msg
	markup: True

<SessionFooter>:
	orientation: 'horizontal'
	Label:
		id: counter
		text: '00:00'
		font_size: 24
	BoxLayout:
		orientation: 'vertical'
		ToggleButton:
			id: audio
			background_color: rgba(design.get_color('dark', 'orange'))
			text: 'Audio'
			font_size: 24
			on_press: root.on_medium_toggle_btn_press('audio')
		ToggleButton:
			id: video
			background_color: rgba(design.get_color('dark', 'purple'))
			text: 'Video'
			font_size: 24
			on_press: root.on_medium_toggle_btn_press('video')
	Button:
		background_color: rgba(design.get_color('dark', 'blue'))
		text: 'Statistics'
		font_size: 24
		on_press: root.on_stat_btn_press()
	Button:
		background_color: rgba(design.get_color('dark', 'red'))
		text: 'End call'
		font_size: 24
		on_press: root.on_end_call_btn_press()
